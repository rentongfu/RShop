<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="rtf.rshop.po">

    <class name="RUser" table="ruser" lazy="false">
    	<id name="id" column="user_id">
    		<generator class="native"></generator>
    	</id>
    	
    	<property name="loginname" column="user_loginname" unique="true" not-null="true" ></property>
    	<property name="password" column="user_password" not-null="true" ></property>
    </class>

</hibernate-mapping>